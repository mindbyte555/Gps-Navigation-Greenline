<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gpstest" parent="Theme.Material3.DayNight.NoActionBar">


        <item name="backgroundColor">#f5f5f5</item>
        <item name="backgroundColor2">#F0F6FF</item>
        <item name="transparrent">#00000000</item>
        <item name="Heading1TextColor">@color/black</item>
        <item name="Heading2TextColor">#99494242</item>
        <item name="primarycolor">@color/white</item>
        <item name="settingbase">@color/white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="DialogSlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="RoundedCornerOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="Theme.Gpstest" parent="Base.Theme.Gpstest" />
    <style name="AlertDialogDayNight" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- Enable background dimming -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- Set the dim amount for the background -->
        <item name="android:backgroundDimAmount">0.8</item> <!-- Adjust this value as needed -->
    </style>

    <style name="AdTheme" >
        <item name="android:background">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
    </style>
    <style name="MyPopupMenuItemStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textSize">@dimen/_12sdp</item> <!-- Set your desired text size here -->
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MyPopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_rounded_bg</item>
    </style>
</resources>